\def\goal#1{\gdef\@goal{#1}}

% Font sizes
\setbeamerfont{author}{size=\Large, series=\bfseries}
\setbeamerfont{title}{size=\Large, series=\bfseries}
\setbeamerfont{date}{size=\footnotesize}
\setbeamerfont{supervisor}{size=\footnotesize}
\setbeamerfont{goal}{size=\footnotesize}
\setbeamerfont{caption}{size=\footnotesize}
\setbeamerfont{caption name}{size=\footnotesize}
\setbeamerfont{footnote}{size=\tiny}
\setbeamerfont{section in sidebar}{size=\small, series=\bfseries}
\setbeamerfont{subsection in sidebar}{size=\small, series=\bfseries}
\setbeamerfont{frametitle}{series=\bfseries}
\setbeamerfont{framesubtitle}{series=\mdseries}


% Define color scheme
\definecolor{ScratchBrown}{RGB}{119,95,85}
\definecolor{ScratchLightBrown}{RGB}{235,221,195}
\definecolor{ScratchLightBlue}{RGB}{148,182,210}
\definecolor{ScratchOrange}{RGB}{221,128,71}
\definecolor{ScratchLightOrange}{RGB}{216,178,92}
\definecolor{ScratchUltraLightOrange}{RGB}{245,236,215}
\definecolor{ScratchRed}{RGB}{153, 13, 6}
\definecolor{ScratchGray}{RGB}{220, 220, 220}

\definecolor{DarkBlue}{RGB}{28, 47, 150}
\definecolor{ZUTLigthBlue}{RGB}{61, 133, 198}
\definecolor{ZUTDarkGray}{RGB}{153, 153, 153}
\definecolor{ZUTLightGray}{RGB}{217, 217, 217}
\definecolor{ZUTSideBlue}{RGB}{120, 144, 205}
\definecolor{ZUT@black}{HTML}{2B2E34}
\definecolor{ZUT@white}{HTML}{F3EEE1}
\colorlet{ZUT@darkGray}{white!10!ZUT@black}

% Syntax highlighting colors
\definecolor{CodeRed}{RGB}{215, 58, 71}
\definecolor{CodeGreen}{RGB}{34, 134, 58}
\definecolor{CodeOrange}{RGB}{227, 98, 9}

% Set color theme
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{title}{fg=ScratchLightBrown}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{item}{fg=ZUTLigthBlue}
\setbeamercolor*{frametitle}{fg=ZUTLigthBlue}
\setbeamercolor*{framesubtitle}{fg=ZUTLigthBlue}
\setbeamercolor*{block title}{fg=white, bg=ScratchOrange}
\setbeamercolor*{block title example}{fg=white, bg=ScratchLightOrange}
\setbeamercolor*{block title alerted}{fg=white, bg=ScratchRed}
\setbeamercolor*{block body}{bg=ScratchUltraLightOrange, fg=black}
\setbeamercolor*{block body example}{bg=ScratchUltraLightOrange, fg=black}
\setbeamercolor*{block body alerted}{bg=ScratchUltraLightOrange, fg=black}
\setbeamercolor*{section in toc}{fg=ZUTLigthBlue}
\setbeamercolor*{section page}{fg=ZUTLigthBlue}
\setbeamercolor*{caption}{fg=ZUT@darkGray}
\setbeamercolor*{caption name}{fg=ZUTLigthBlue}
\setbeamercolor*{qed symbol}{fg=ZUTLigthBlue}
\setbeamercolor*{alerted text}{fg=ScratchRed}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{footline}{fg=black}


% Sidebar
\setbeamercolor{section in sidebar}{fg=ZUTSideBlue}          %color of the active section
\setbeamercolor{section in sidebar shaded}{fg=ZUTDarkGray}     %color of the inactive section
\setbeamercolor{subsection in sidebar}{fg=ZUTSideBlue}         %color of the active subsection
\setbeamercolor{subsection in sidebar shaded}{fg=ZUTDarkGray}  %color of the inactive subsection
\setbeamercolor{title in sidebar}{fg=ZUTDarkGray}              %color of the presentation title
\setbeamercolor{author in sidebar}{fg=ZUTDarkGray}             %color of the author



% Syntax highlight colors
\lstset{%
    basicstyle=\ttfamily,
    commentstyle=\color{CodeGreen},
    keywordstyle=\color{CodeRed},
    stringstyle=\color{CodeOrange}
}

% Links colors
\hypersetup{
  colorlinks = true,
  linkcolor = ZUTLigthBlue,
  urlcolor = ZUTLigthBlue,
}

% Color brackets in references
\let\oldcite=\cite                                                              
\renewcommand{\cite}[1]{\textcolor{ZUTLigthBlue}{\oldcite{#1}}}

