\mode<presentation>
% Global variables
\def\city#1{\gdef\@city{#1}}
\def\supervisor#1{\gdef\@supervisor{#1}}
\def\goal#1{\gdef\@goal{#1}}

% Font sizes
\setbeamerfont{author}{size=\Large, series=\bfseries}
\setbeamerfont{title}{size=\Large, series=\bfseries}
\setbeamerfont{date}{size=\footnotesize}
\setbeamerfont{supervisor}{size=\footnotesize}
\setbeamerfont{goal}{size=\footnotesize}
\setbeamerfont{caption}{size=\footnotesize}
\setbeamerfont{caption name}{size=\footnotesize}
\setbeamerfont{footnote}{size=\tiny}
\setbeamerfont{section in sidebar}{size=\small, series=\bfseries}
\setbeamerfont{subsection in sidebar}{size=\small, series=\bfseries}
\setbeamerfont{frametitle}{series=\bfseries}
\setbeamerfont{framesubtitle}{series=\mdseries}
% Subtitle cursive
\setbeamerfont{framesubtitle}{size=\small, shape=\itshape}


% Define color scheme
\definecolor{ZUT@LightOrange}{RGB}{216,178,92}
\definecolor{ZUT@Red}{RGB}{153, 13, 6}
\definecolor{ZUT@DarkBlue}{RGB}{28, 47, 150}
\definecolor{ZUT@LigthBlue}{RGB}{61, 133, 198}
\definecolor{ZUTLigthBlue}{RGB}{61, 133, 198}
\definecolor{ZUT@DarkGray}{RGB}{153, 153, 153}
\definecolor{ZUT@LightGray}{RGB}{217, 217, 217}
\definecolor{ZUT@SideBlue}{RGB}{120, 144, 205}
\definecolor{ZUT@black}{HTML}{2B2E34}
\definecolor{ZUT@white}{HTML}{F3EEE1}
\colorlet{ZUT@darkGray}{white!10!ZUT@black}
\definecolor{ZUT@pink}{RGB}{235, 0, 139}
\colorlet{ZUT@ultraLightBlue}{white!90!ZUT@LigthBlue}

% Syntax highlighting colors
\definecolor{CodeRed}{RGB}{215, 58, 71}
\definecolor{CodeGreen}{RGB}{34, 134, 58}
\definecolor{CodeOrange}{RGB}{227, 98, 9}

% Set color theme
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{title}{fg=ScratchLightBrown}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{item}{fg=ZUTLigthBlue}
\setbeamercolor*{frametitle}{fg=ZUTLigthBlue}
\setbeamercolor*{framesubtitle}{fg=ZUTLigthBlue}
\setbeamercolor*{block title}{fg=white, bg=ZUTLigthBlue}
\setbeamercolor*{block title example}{fg=white, bg=ZUT@LightOrange}
\setbeamercolor*{block title alerted}{fg=white, bg=ZUT@Red}
\setbeamercolor*{block body}{bg=ZUT@ultraLightBlue, fg=black}
\setbeamercolor*{block body example}{bg=ZUT@ultraLightBlue, fg=black}
\setbeamercolor*{block body alerted}{bg=ZUT@ultraLightBlue, fg=black}
\setbeamercolor*{section in toc}{fg=ZUTLigthBlue}
\setbeamercolor*{section page}{fg=ZUTLigthBlue}
\setbeamercolor*{caption}{fg=ZUT@darkGray}
\setbeamercolor*{caption name}{fg=ZUTLigthBlue}
\setbeamercolor*{qed symbol}{fg=ZUTLigthBlue}
\setbeamercolor*{alerted text}{fg=ScratchRed}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{footline}{fg=black}
\setbeamercolor*{alerted text}{fg=ZUT@pink}


% Sidebar
\setbeamercolor{section in sidebar}{fg=ZUT@SideBlue}          %color of the active section
\setbeamercolor{section in sidebar shaded}{fg=ZUT@DarkGray}     %color of the inactive section
\setbeamercolor{subsection in sidebar}{fg=ZUT@SideBlue}         %color of the active subsection
\setbeamercolor{subsection in sidebar shaded}{fg=ZUT@DarkGray}  %color of the inactive subsection
\setbeamercolor{title in sidebar}{fg=ZUT@DarkGray}              %color of the presentation title
\setbeamercolor{author in sidebar}{fg=ZUT@DarkGray}             %color of the author

\setbeamercolor{frametitle}{fg=Brown,bg=Brown!20}
\setbeamercolor{section in head/foot}{bg=Brown}


% Syntax highlight colors
\lstset{%
    basicstyle=\ttfamily,
    commentstyle=\color{CodeGreen},
    keywordstyle=\color{ZUT@LigthBlue},
    stringstyle=\color{CodeOrange}
}

% Links colors
\hypersetup{
  colorlinks = true,
  linkcolor = ZUT@LigthBlue,
  urlcolor = ZUT@LigthBlue,
}
\hypersetup{bookmarksdepth=4,bookmarksnumbered=true,bookmarksopen=true}

% Color brackets in references
\let\oldcite=\cite                                                              
\renewcommand{\cite}[1]{\textcolor{ZUT@LigthBlue}{\oldcite{#1}}}

\mode <all>